<div class="card-product">
  <%= cl_image_tag @product.photo.key, height: 300, width: 400, crop: :fill %>
  <div class="card-product-infos mt-3 mb-3">
    <h1><strong><%= @product.name %></strong></h1>
    <p id="description"><strong>Description: </strong><%= @product.description %></p>
    <p><strong>Adress: </strong><%= @product.address %></p>
    <p><strong>City: </strong><%= @product.city %></p>
    <p><strong>Price: </strong><%= @product.price %></p>

    <%= link_to 'Edit', edit_product_path(@product) , class: "btn btn-ghost mt-3 ml-3"  %>
    <%= link_to 'Delete', product_path(@product), class: "btn btn-ghost mt-3 ml-3" ,method: :delete, data: { confirm: "Are you sure?" } %>
    <%= link_to 'Back', products_path, class: "btn btn-ghost mt-3 ml-3"  %>
    <%= link_to 'Rent', new_product_booking_request_path(@product), class: "btn btn-flat mt-3 ml-3"  %>
  </div>
</div>

<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<%= link_to 'Edit this product', edit_product_path(@product) %> |
<%= link_to 'Back to list of products', products_path %> |
<%= link_to 'Rent this product', new_product_booking_request_path(@product) %> |
<%= link_to 'Delete product', product_path(@product), method: :delete, data: { confirm: "Are you sure?" } %>
